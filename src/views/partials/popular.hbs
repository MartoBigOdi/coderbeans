<div class="card mb-2">
    <div class="card-header bg-dark text-white">
        <h5><i class="fas fa-fire"></i> Mejor Post</h5>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each sidebar.popular}}
                <a href="/images/{{uniqueId}}">
                    <img src="/public/upload/{{filename}}" class="w-100 h-100 image-thumbnail mb-2">
                </a>
            {{/each}}
        </div>
    </div>
</div>